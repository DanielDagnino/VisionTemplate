{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    },
    "console_simple": {
      "format": "%(message)s"
    }
  },

  "handlers": {
    "info_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "simple",
      "filename": "{LOGDIR}/info{RANK}.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },

    "warning_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "WARNING",
      "formatter": "simple",
      "filename": "{LOGDIR}/warn{RANK}.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    },

    "error_file_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "simple",
      "filename": "{LOGDIR}/error{RANK}.log",
      "maxBytes": 10485760,
      "backupCount": 20,
      "encoding": "utf8"
    }
  },

  "root": {
    "level": "INFO",
    "handlers": ["info_file_handler", "warning_file_handler", "error_file_handler"]
  }
}
